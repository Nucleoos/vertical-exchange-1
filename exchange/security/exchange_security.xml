<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- Groups -->

        <record model="ir.module.category" id="module_exchange_category">
            <field name="name">Exchange</field>
            <field name="description"/>
            <field name="sequence">17</field>
        </record>

        <record id="group_exchange_user" model="res.groups">
            <field name="name">Exchange User</field>
            <field name="category_id" ref="module_exchange_category"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user'),ref('base.group_partner_manager')])]"/>
        </record>

        <record id="group_exchange_moderator" model="res.groups">
            <field name="name">Exchange Moderator</field>
            <field name="category_id" ref="module_exchange_category"/>
            <field name="implied_ids" eval="[(6, 0, [ref('group_exchange_user')])]"/>
        </record>

        <record id="group_exchange_admin" model="res.groups">
            <field name="name">Exchange Admin</field>
            <field name="category_id" ref="module_exchange_category"/>
            <field name="implied_ids" eval="[(6, 0, [ref('group_exchange_moderator')])]"/>
        </record>

        <record id="account.group_account_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_exchange_moderator'))]"/>
        </record>


        <!-- Rules model_exchange_transaction -->

        <record id="exchange_transaction_user_read_rule" model="ir.rule">
            <field name="name">exchange transaction user read</field>
            <field name="model_id" ref="model_exchange_transaction"/>
            <field name="domain_force">[('state','not in',['draft','canceled'])]</field>
            <field name="groups"  eval="[(6,0,[ref('group_exchange_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="exchange_transaction_user_own_rule" model="ir.rule">
            <field name="name">exchange transaction user own</field>
            <field name="model_id" ref="model_exchange_transaction"/>
            <field name="domain_force">[('sender_id.user_ids','in',user.id)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_exchange_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="exchange_transaction_receiver_rule" model="ir.rule">
            <field name="name">exchange transaction receiver</field>
            <field name="model_id" ref="model_exchange_transaction"/>
            <field name="domain_force">[('receiver_id.user_ids','in',user.id)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_exchange_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="exchange_transaction_moderator_rule" model="ir.rule">
            <field name="name">exchange transaction moderator all rights</field>
            <field name="model_id" ref="model_exchange_transaction"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"  eval="[(6,0,[ref('group_exchange_moderator')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="base.res_currency_rule" model="ir.rule">
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</openerp>
